<!--いいね一覧-->
<div class="container">
   <h2 class="card-text text-center mt-4">いいね一覧</h2>
   <p class="tex">例文を日本語訳で考えてみましょう！</p>
  <div class="row">
    <div class="col-12 justify-content-around d-flex flex-wrap">
      <% @favorite_sentences.each do |favorite|%>
      <div class="card  shadow text-center mt-2 mb-2" style="width: 30rem;">
        <div class="card-body">
          <h5 class="card-text"><%= link_to favorite.sentences, word_example_sentences_path(favorite.word_id,favorite.id) %></h5>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>