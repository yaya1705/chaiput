<div class="container">
  <div class="row mt-2">
    <div class="col-4 mt-3">
      <h2>ユーザー情報</h2>
      <table class="table-demo">
        <tr>
            <th>ユーザー名</th>
            <td><%= @user.name %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
        </tr>
      </table>
    </div>
    <div class="col-6 mt-3 ml-4">
      <h2>単語一覧</h2>
    <table class="design01">
      <tr>
        <th>中国語</th>
        <th>日本語</th>
      </tr>
       <% @words.each do |word|%>
      <tr>
        <td><%= link_to word.cn_word, word_path(word) %></td>
        <td><%= word.jp_word %></td>
      </tr>
      <% end %>
    </table>
    </div>
  </div>
</div>