<div class="container">
  <div class="row mt-5">
    <div class="col-5">
      <h2>単語投稿</h2>
      <%= form_with model: @word, url: words_path do |f| %>
      <div class="form-group row mt-3">
        <label class="col-sm-3">中国語(chinese)</label>
        <div class="col-sm-8">
          <%= f.text_field :cn_word, placeholder: "朋友"%>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3">日本語(japanese)</label>
        <div class="col-sm-8">
          <%= f.text_field :jp_word, placeholder: "友達"%>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-3">メモ</label>
        <div class="col-sm-8">
          <%= f.text_area :supplement, size: "30x4",placeholder: "老朋友=古くからの友人"%>
        </div>
      </div>
       <div class="form-group row">
         <label class="col-sm-3"></label>
         <div class="co-l-sm-8 ml-3">
           <%= f.submit "単語追加", class: "btn btn-success" %>
         </div>
    </div>
    <% end %>
    </div>
    <div class="col-6 ml-4 mt-2">
      <h2>単語帳</h2>
      <table class="design01 mt-3">
        <tr>
          <th></th>
          <th>中国語</th>
          <th>日本語</th>
        </tr>
        <% @words.each do |word| %>
        <tr>
          <td><%= word.id %></td>
          <td>
            <%= link_to word.cn_word, word_path(word) %>
          </td>
          <td><%= word.jp_word %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
