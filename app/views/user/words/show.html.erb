<div class="container">
    <div class="row mt-5">
        <div class="col-5">
            <h2>単語詳細 <i class="fas fa-user-edit"></i></h2>
           <div class="card w-96 bg-base-100 shadow-xl mt-3">
              <div class="card-body">
                <h2 class="card-title"><%= @word.cn_word%></h2>
                <p><%= @word.jp_word %></p>
                <p><%= @word.supplement %></p>
                <div class="card-actions justify-end">
                <% if @word.user_id == current_user.id %>
                  <%= link_to "編集", edit_word_path, class: 'btn btn-primary mr-5' %>
                  <%= link_to "削除", word_path, method: :delete, class: "btn btn-danger "%>
                <% end %>
                </div>
              </div>
            </div>
            <div class="row">
               <div class="col-12 mt-4">
                 <h2>例文追加</h2>
            <div class="comment mt-3">
               <%= form_with model:[@word,@example_sentence], url: word_example_sentences_path(@word) do |f| %>
               <%= f.text_field :sentences, size: "35x1" %>
               <%= f.submit "例文追加", class: "btn btn-success ml-4"%>
               <% end %>
           </div>
       </div>
            </div>
        </div>
        <div class="col-6 ml-4 mt-2">
          <h2>例文一覧</h2>
          <table class="design01 mt-3">
            <tr>
              <th>例文</th>
              <th></th>
              <th></th>
            </tr>
            <% @example_sentences.each do |example_sentence| %>
            <tr>
              <td><%= example_sentence.sentences %></td>
              <td>
                <% if example_sentence.favorited_by?(current_user) %>
                  <%= link_to word_example_sentence_favorites_path(example_sentence.word,example_sentence), method: :delete do %>
                    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                    <%= example_sentence.favorites.count %>
                  <% end %>
                <% else %>
                  <%= link_to word_example_sentence_favorites_path(example_sentence.word,example_sentence), method: :post do %>
                    <i class="fas fa-heart" aria-hidden="true"></i>
                    <%= example_sentence.favorites.count %>
                  <% end %>
                <% end %>
              </td>
              <td>
                <% if example_sentence.user_id == current_user.id %>
                <!--パスの後に引数を入れる(投稿(アソシエーションの記述)、コメント)-->
                  <%= link_to "削除", word_example_sentence_path(example_sentence.word,example_sentence), method: :delete, class: "btn "%>
                 <% end %>
              </td>

            </tr>
            <% end %>
      </table>
        </div>
    </div>
</div>
