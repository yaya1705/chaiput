<div class="container mt-3 mb-5">
  <div class="row">
    <div class="col-xl-6 mx-auto mt-3">
      <h2 class="text-center"><%= current_user.name %></h2>
       <div class="text-center">
         <%= image_tag current_user.profile_image,size:"150x150" %>
        </div>
       <%= form_with model: @profile, url: users_profile_path, method: :put do |f| %>
        <div class="field">
          <%= f.label :紹介文 %><br />
          <%= f.text_area :introduction, autofocus: true,class: "form-control mb10" %>
        </div>
        <br>
        <div class="field">
          <%= f.label :プロフィール画像 %><br />
          <%= f.file_field :profile_image, class: "form-control mb10"%>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "更新" , class: " btn btn-secondary btn-block mt-4"%>
        </div>
       <% end %> <br>
        <%= link_to "マイページへ戻る",users_path, class:"btn btn-outline-secondary btn-sm"%>
    </div>
  </div>
</div>