<%= form_with model: @user, url: admins_user_path, local: true, method: :patch do |f| %>
    <div class="row">
      <div class="col-xs-6 mx-auto">
        <table class="table table-bordered">
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
            <%= f.radio_button :is_deleted, "true" %> 退会
            <%= f.radio_button :is_deleted, "false" %> 有効
            </td>
          </tr>
        </table>
        </div>
    </div>
    <div class="row">
      <div class="col-xs-4 mx-auto mb-3">

        <%= f.submit "変更を保存", class:"btn btn-success rounded-pill" %>
      </div>
    </div>
  <% end %>
