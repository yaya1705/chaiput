<div class="container mt-4">
  <h2 class="text-center">品詞追加</h2>
  <div class="row">
    <div class="col-xl-5 offset-1 mt-3">
      <%= form_with model: @genre, url: admins_genres_path do |f| %>
         <div class="form-group row">
           <label class="col-3">
             <%= f.label :name, "品詞" %>
           </label>
           <div class="col-6">
             <%= f.text_field :name, class: "form-control"%>
           </div>
           <div class="col-2">
             <%= f.submit "追加", class: " btn btn-success"%>
           </div>
         </div>
      <% end %>
    </div>
    <div class="col-xl-5 mt-3">
        <div class="row">
           <% @genres.each do |genre| %>
            <div class="col-6 mb-2">
              <%= genre.name %>
            </div>
            <div class="col-6 mb-2">
              <%= link_to "削除", admins_genre_path(genre), method: :delete, class: "btn btn-danger" %>
            </div>
            <% end %>
        </div>
    </div>
  </div>
</div>
